import wollok.game.*
import tank.*
import enemigos.*
import balas.*
import paredes.*
import extras.*
import mapas.*

describe "Tanque" {

	method initialize() {
		game.clear()
	}

	test "Tanque con dos vidas, recibe daño dos veces y queda con 0 vidas" {
		tanque.vidas(2)
		tanque.recibirDanio()
		tanque.recibirDanio()
		assert.equals(0, tanque.vidas())
	}

	test "Tanque con una vida desaparece del tablero" {
		tanque.vidas(1)
		tanque.recibirDanio()
		assert.notThat(game.hasVisual(tanque))
	}

	test "Tanque destruye dos enemigos con una vida y los tanques desaparecen" {
		const enemigo = new Tanque()
		const enemigo2 = new Tanque()
		enemigo.recibirDanio()
		enemigo2.recibirDanio()
		assert.notThat(game.hasVisual(enemigo))
		assert.notThat(game.hasVisual(enemigo2))
	}

}

describe "Enemigos" {

	method initialize() {
		game.clear()
	}

	test "Tanque enemigo común con tres vidas, recibe dos impactos y desaparece del mapa" {
		const enemigo = new Tanque()
		assert.equals(3, enemigo.vidasRestantes())
		enemigo.recibirDanio()
		enemigo.recibirDanio()
		assert.notThat(game.hasVisual(enemigo))
	}

	test "Tanque enemigo pesado con siete vidas, recibe seis impactos y desaparece del mapa" {
		const enemigo = new TanquePesado()
		assert.equals(7, enemigo.vidasRestantes())
		enemigo.recibirDanio()
		enemigo.recibirDanio()
		enemigo.recibirDanio()
		enemigo.recibirDanio()
		enemigo.recibirDanio()
		enemigo.recibirDanio()
		assert.notThat(game.hasVisual(enemigo))
	}

}

describe "Paredes" {

	method initialize() {
		game.clear()
	}

	test "Pared de ladrillo desaparece luego de dos impactos" {
		const paredDeLadrillo = new ParedDeLadrillo()
		paredDeLadrillo.recibirDanio()
		paredDeLadrillo.recibirDanio()
		assert.notThat(game.hasVisual(paredDeLadrillo))
	}

}

